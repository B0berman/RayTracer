#include	"neptune/io.h"
#include	"neptune/strmut.h"
#include	"rt.h"

static int	check_ret(t_rt *rt, double *col, int i)
{
  col[i++] = rt->color;
  if (i == 10 && col[i - 5] == rt->color
      && col[i - 10] == rt->color)
    {
      rt->color = rt_average(col, 10);
      free(col);
      return (0);
    }
  return (1);
}

void		rt_aliasing(t_rt *rt, double x, double y)
{
  int		i;
  double	x1;
  double	y1;
  double	coef;
  uint		*col;

  i = 0;
  col = malloc(sizeof(unsigned int) * (pow(rt->aliasing + 1, 2)));
  coef = (1 / (double)rt->aliasing);
  x1 = x - 1;
  while (x1 <= x)
    {
      y1 = y - 1;
      while (y1 <= y)
	{
	  rt_init_loop(rt, &rt->coord, x1, y1);
	  rt_loop(rt);
	  if (check_ret(rt, col, i) == 0)
	    return ;
	  y1 += coef;
	}
      x1 += coef;
    }
  rt->color = rt_average(col, pow(rt->aliasing + 1, 2));
  free(col);
}
